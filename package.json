  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:check": "next lint",
    "lint:fix": "next lint --fix",
    "format:check": "prettier --check \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "format:fix": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "db:push": "dotenv drizzle-kit push:mysql",
    "db:generate": "dotenv drizzle-kit generate:mysql",
    "db:migrate": "dotenv tsx src/server/db/migrate.ts",
    "db:studio": "dotenv drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
